FROM node:carbon

ARG BUILD_VERSION

# Create app directory
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# Install app dependencies
COPY package.json /usr/src/app/
RUN npm install

# Bundle app source
COPY . /usr/src/app
RUN npm run build

ENV BUILD_VERSION=${BUILD_VERSION}
ENV PORT=3000

EXPOSE 3000

CMD [ "npm", "run",  "start" ]